{
  "name": "phrassed",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./server",
    "start:dev": "nodemon ./server --ext js,ejs",
    "verify": "yarn lint; yarn test",
    "test": "./scripts/run-tests.sh",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --reporters=default --reporters=jest-junit",
    "test:ci": "yarn test:coverage",
    "lint": "eslint server/",
    "lint:ci": "yarn lint --format junit -o reports/junit/js-lint-results.xml",
    "prettier": "prettier integration/** server/**",
    "db:reset": "knex migrate:rollback; knex migrate:latest; knex seed:run",
    "circleci": "circleci local execute --job build"
  },
  "dependencies": {
    "cookie-parser": "1.4.4",
    "ejs": "2.6.1",
    "express": "4.16.4",
    "http-errors": "1.7.2",
    "knex": "0.16.5",
    "morgan": "1.9.1",
    "nyc": "14.0.0",
    "pg": "7.9.0"
  },
  "devDependencies": {
    "debug": "4.1.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "jest": "24.7.1",
    "jest-junit": "6.3.0",
    "nodemon": "1.18.11",
    "prettier": "1.17.0",
    "supertest": "4.0.2"
  }
}
